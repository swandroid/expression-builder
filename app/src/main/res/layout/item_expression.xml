<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/item_margin_top"
    android:background="?android:selectableItemBackground"
    app:cardElevation="@dimen/item_elevation">

    <LinearLayout
        android:id="@+id/expression_item_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_half_vertical_margin"
        android:paddingBottom="@dimen/activity_half_vertical_margin"
        android:background="@drawable/item_selector">

        <TextView
            android:id="@+id/expression_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary_color"/>

        <TextView
            android:id="@+id/expression_item_valuation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary_color"/>
    </LinearLayout>

</android.support.v7.widget.CardView>