<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/expression_create_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin">

        <Spinner
            android:id="@+id/expression_create_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/array_expressions"
            android:layout_marginTop="@dimen/activity_half_vertical_margin"
            android:layout_marginBottom="@dimen/activity_half_vertical_margin"/>

    </LinearLayout>

</merge>